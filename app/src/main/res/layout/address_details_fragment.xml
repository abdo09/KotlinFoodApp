<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_layout"
        app:layout_constraintBottom_toBottomOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/sixty_dp"
            android:clipToPadding="false"
            android:paddingEnd="@dimen/padding_2x"
            android:paddingStart="@dimen/padding_2x"
            android:paddingTop="@dimen/padding_2x"
            >
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardView"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_margin="8dp"
                android:minHeight="200dp"
                app:cardBackgroundColor="@color/lightGrayOverlay"
                app:cardCornerRadius="@dimen/cardView_radius_main"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/map_static_iv"
                        android:layout_width="128dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/location_pin_svg" />

                    <TextView
                        android:id="@+id/map_address_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:text="TextView"
                        android:textAlignment="viewStart"
                        app:layout_constraintEnd_toStartOf="@+id/map_static_iv"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView16" />

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/pin_location_icon" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/address_from_map"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
                        app:layout_constraintStart_toEndOf="@+id/imageView9"
                        app:layout_constraintTop_toTopOf="@+id/imageView9" />

                    <Button
                        android:id="@+id/edit"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:background="@drawable/blue_button"
                        android:text="@string/edit"
                        android:textColor="@color/white"
                        android:textSize="@dimen/ten_sp"
                        app:layout_constraintBottom_toBottomOf="@+id/map_static_iv"
                        app:layout_constraintEnd_toEndOf="@+id/map_static_iv"
                        app:layout_constraintStart_toStartOf="@+id/map_static_iv" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/city_address_details_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/city"
                app:layout_constraintStart_toStartOf="@+id/cardView"
                app:layout_constraintTop_toBottomOf="@+id/cardView" />

            <TextView
                android:id="@+id/city_address_details"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:background="@drawable/rounded_corners_bordered"
                android:padding="@dimen/padding_1x"
                android:ems="10"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_1x"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/city_address_details_label" />


            <TextView
                android:id="@+id/city_district_address_details_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/district"
                app:layout_constraintStart_toStartOf="@+id/city_address_details"
                app:layout_constraintTop_toBottomOf="@+id/city_address_details" />

            <EditText
                android:id="@+id/city_district_address_details"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:background="@drawable/rounded_corners_bordered"
                android:padding="@dimen/padding_1x"
                android:ems="10"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_1x"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/city_district_address_details_label" />


            <TextView
                android:id="@+id/city_street_address_details_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/street"
                app:layout_constraintStart_toStartOf="@+id/city_district_address_details"
                app:layout_constraintTop_toBottomOf="@+id/city_district_address_details" />

            <EditText
                android:id="@+id/city_street_address_details"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:background="@drawable/rounded_corners_bordered"
                android:padding="@dimen/padding_1x"
                android:ems="10"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_1x"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/city_street_address_details_label" />


            <TextView
                android:id="@+id/shipping_address_details_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/shipping_address_details"
                app:layout_constraintStart_toStartOf="@+id/cardView"
                app:layout_constraintTop_toBottomOf="@+id/city_street_address_details" />

            <EditText
                android:id="@+id/shipping_address_details"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_corners_bordered"
                android:ems="10"
                android:hint="@string/shipping_address_details_hint"
                android:inputType="textPersonName"
                android:padding="@dimen/padding_1x"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shipping_address_details_label" />


            <TextView
                android:id="@+id/phone_number_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/phone_number_label"
                app:layout_constraintStart_toStartOf="@+id/cardView"
                app:layout_constraintTop_toBottomOf="@+id/shipping_address_details" />

            <EditText
                android:id="@+id/phone_number"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_corners_bordered"
                android:ems="10"
                android:inputType="phone"
                android:text="000000000"
                android:textAlignment="viewEnd"
                android:paddingStart="64dp"
                android:paddingEnd="68dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phone_number_label" />

            <TextView
                android:layout_width="64dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingTop="2dp"
                android:paddingRight="8dp"
                android:padding="@dimen/padding_1x"
                android:paddingBottom="2dp"
                android:text="+966"
                android:textAlignment="center"
                android:textDirection="ltr"
                app:layout_constraintBottom_toBottomOf="@+id/phone_number"
                app:layout_constraintLeft_toLeftOf="@+id/phone_number"
                app:layout_constraintTop_toTopOf="@+id/phone_number" />


            <TextView
                android:id="@+id/fullname_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/full_name_label"
                app:layout_constraintStart_toStartOf="@+id/cardView"
                app:layout_constraintTop_toBottomOf="@+id/phone_number" />

            <EditText
                android:id="@+id/fullname"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_corners_bordered"
                android:ems="10"
                android:padding="@dimen/padding_1x"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fullname_label" />


            <TextView
                android:id="@+id/email_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/email"
                app:layout_constraintStart_toStartOf="@+id/cardView"
                app:layout_constraintTop_toBottomOf="@+id/fullname" />

            <EditText
                android:id="@+id/email"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_corners_bordered"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:padding="@dimen/padding_1x"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email_label" />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
