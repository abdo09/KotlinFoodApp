<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background"
    tools:context=".ui.user.verification.VerificationOtpFragment">

    <TextView
        android:id="@+id/tv_fragment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sixteen_dp"
        android:layout_marginTop="@dimen/eighty_dp"
        android:layout_marginEnd="@dimen/sixteen_dp"
        android:fontFamily="@font/droid_serif_bold_italic"
        android:gravity="center"
        android:text="Verification code sent to "
        android:textColor="@color/gold_400"
        android:textSize="@dimen/thirty_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/otp_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/forty_dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_fragment_title">

        <EditText
            android:id="@+id/digit7"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:gravity="center"
            android:inputType="phone"
            android:maxLength="6" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/sixty_dp"
            android:layoutDirection="ltr"
            android:orientation="horizontal"
            android:weightSum="6">

            <EditText
                android:id="@+id/digit1"
                android:layout_width="@dimen/zero_dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/two_dp"
                android:layout_weight="1"
                android:background="@drawable/otp_background"
                android:focusable="false"
                android:gravity="center"
                android:inputType="phone"
                android:maxLength="1"
                android:maxLines="1"
                android:textColor="@color/gold_500"
                android:textCursorDrawable="@null"
                android:textSize="30sp"
                android:theme="@style/goldEditTextStyle"
                tools:ignore="Autofill,LabelFor" />


            <EditText
                android:id="@+id/digit2"
                android:layout_width="@dimen/zero_dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/two_dp"
                android:layout_weight="1"
                android:background="@drawable/otp_background"
                android:focusable="false"
                android:gravity="center"
                android:inputType="phone"
                android:maxLength="1"
                android:maxLines="1"
                android:textColor="@color/gold_500"
                android:textCursorDrawable="@null"
                android:textSize="30sp"
                android:theme="@style/goldEditTextStyle"
                tools:ignore="Autofill,LabelFor" />


            <EditText
                android:id="@+id/digit3"
                android:layout_width="@dimen/zero_dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/two_dp"
                android:layout_weight="1"
                android:background="@drawable/otp_background"
                android:focusable="false"
                android:gravity="center"
                android:inputType="phone"
                android:maxLength="1"
                android:maxLines="1"
                android:textColor="@color/gold_500"
                android:textCursorDrawable="@null"
                android:textSize="30sp"
                android:theme="@style/goldEditTextStyle"
                tools:ignore="Autofill,LabelFor" />

            <EditText
                android:id="@+id/digit4"
                android:layout_width="@dimen/zero_dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/two_dp"
                android:layout_weight="1"
                android:background="@drawable/otp_background"
                android:focusable="false"
                android:gravity="center"
                android:inputType="phone"
                android:maxLength="1"
                android:maxLines="1"
                android:textColor="@color/gold_500"
                android:textCursorDrawable="@null"
                android:textSize="30sp"
                android:theme="@style/goldEditTextStyle"
                tools:ignore="Autofill,LabelFor" />

            <EditText
                android:id="@+id/digit5"
                android:layout_width="@dimen/zero_dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/two_dp"
                android:layout_weight="1"
                android:background="@drawable/otp_background"
                android:focusable="false"
                android:gravity="center"
                android:inputType="phone"
                android:maxLength="1"
                android:maxLines="1"
                android:textColor="@color/gold_500"
                android:textCursorDrawable="@null"
                android:textSize="30sp"
                android:theme="@style/goldEditTextStyle"
                tools:ignore="Autofill,LabelFor" />

            <EditText
                android:id="@+id/digit6"
                android:layout_width="@dimen/zero_dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="@dimen/two_dp"
                android:layout_weight="1"
                android:background="@drawable/otp_background"
                android:focusable="false"
                android:gravity="center"
                android:inputType="phone"
                android:maxLength="1"
                android:maxLines="1"
                android:textColor="@color/gold_500"
                android:textCursorDrawable="@null"
                android:textSize="30sp"
                android:theme="@style/goldEditTextStyle"
                tools:ignore="Autofill,LabelFor" />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/forty_dp"
        android:gravity="center"
        android:text="@string/_2_30"
        android:textColor="@color/gold_300"
        android:textSize="@dimen/twenty_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otp_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>